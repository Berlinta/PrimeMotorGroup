<%= form_for(@car) do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :description %>
<%= f.text_area :description %>
<br>
<%= f.label :drive %>
<%= f.text_field :drive %>
<br>
<%= f.label :line %>
<%= f.text_field :line %>
<br>
<%= f.label :line_id, "line" %>
<%= f.collection_select :line_id, Line.all, :id, :name, prompt: true %>
<br>

<%= f.submit class: "btn-custom2" %>

<% end %>