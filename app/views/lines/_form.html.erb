<%= form_for(@car) do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :description %>
<%= f.text_area :description %>
<br>
<%= f.label :drive %>
<%= f.text_field :drive %>
<br>
<%= f.label :make %>
<%= f.text_field :make %>
<br>
<%= f.label :line_id %>
<%= f.text_field :line_id %>
<br>
<%= f.label :line_id, "line" %>
<%= f.collection_select :line_id, Line.all, :id, :name, prompt: true %>
<br>

<%= f.submit %>

<% end %>